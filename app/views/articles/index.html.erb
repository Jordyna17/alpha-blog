<h1 class = "text-center mt-4"> Articles listing page</h1>

  <% @articles.each do |article| %>

<div class="card " style="width: 30rem;">
  <img class="card-img-top" src="https://images.unsplash.com/photo-1463436755683-3f805a9d1192?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2553&q=80">
  <div class="card-body">
    <h5 class ="card-title"> <%= article.title %></h5>
    <p class="card-text"><%= truncate(article.description, length: 100)%></p>
    <%= link_to "View", article_path(article), class: "btn btn-outline-info" %>
    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary" %>
    <%= link_to "Delete", article_path(article), class: "btn btn-outline-dark" %>
  </div>
  <<div class="card-footer font-italic">
    by <%=article.user.username if article.user %>
  </div>
</div>

<% end %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.id %> </td>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td><%= link_to 'Show', article_path(article.id)%></td>
        <td><%= link_to 'Edit', edit_article_path(article.id)%></td>
        <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: { confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
  </tbody>

</table>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>
